{
  "manifest_version": 2,
  "name": "FuzzyTabs",
  "version": "1.0.2",
  "description": "Fuzzy-search through opened tabs",
  "icons": {
    "48": "icons/ic_search.svg"
  },
  "browser_action": {
    "default_title": "FuzzyTabs",
    "default_icon": "icons/ic_search.svg",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "Open FuzzyTabs"
    }
  }
}