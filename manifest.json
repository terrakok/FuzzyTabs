{
  "manifest_version": 2,
  "name": "FuzzyTabs",
  "version": "1.0.0",
  "description": "Fuzzy-search through opened tabs",
  "icons": {
    "48": "icons/ic_search.svg"
  },
  "browser_action": {
    "default_title": "FuzzyTabs",
    "default_icon": "icons/ic_search.svg"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "toggle-spotlight": {
      "suggested_key": {
        "default": "Ctrl+Shift+I"
      },
      "description": "Open FuzzyTabs"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "run_at": "document_idle"
    }
  ]
}